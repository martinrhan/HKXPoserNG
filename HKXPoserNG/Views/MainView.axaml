<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:v="clr-namespace:HKXPoserNG.Views"
             xmlns:vm="clr-namespace:HKXPoserNG.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 IsHitTestVisible="True"
             x:Class="HKXPoserNG.Views.MainView">
  <Grid ColumnDefinitions="*, auto, auto" RowDefinitions="auto, *, auto">
	<Menu Name="menu" Grid.Row="0" Grid.ColumnSpan="2" DataContext="{x:Static vm:MenuViewModel.Instance}" ItemsSource="{Binding Items}">
	  <Menu.Styles>
		<Style Selector="MenuItem">
		  <Setter Property="Header" Value="{Binding Header}"/>
		  <Setter Property="ItemsSource" Value="{Binding Items}"/>
		  <Setter Property="Command" Value="{Binding Command}"/>
		  <Setter Property="InputGesture" Value="{Binding HotKey}"/>
		  <Setter Property="HotKey" Value="{Binding HotKey}"/>
		  <Setter Property="Icon" Value="{Binding Icon}"/>
		 </Style>
	  </Menu.Styles>
	</Menu>
	<GridSplitter Grid.Column="1" Grid.RowSpan="3" Width="5"/>
	<v:SkeletonView Grid.Column="2" Grid.RowSpan="3"/>
	<v:D3D11View Grid.Row="1" ZIndex="-1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
	<v:BoneView Grid.Row="1" Width="200" VerticalAlignment="Top" HorizontalAlignment="Right"/>
	<v:AnimationView Grid.Row="2" Height="100"/>
  </Grid>
</UserControl>
